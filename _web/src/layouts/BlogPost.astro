---
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, date, tags, description, type } = post.data;
---

<style>
  .blog-post-header {
    margin-bottom: 2rem;
  }
  .blog-post-title {
    font-size: 1.875rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  .blog-post-meta {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }
  .blog-post-meta span {
    margin: 0 0.5rem;
  }
  .blog-post-meta .type {
    text-transform: capitalize;
  }
  .blog-post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .blog-post-tag {
    padding: 0.25rem 0.5rem;
    background-color: #f3f4f6;
    color: #374151;
    font-size: 0.75rem;
    border-radius: 0.25rem;
    text-decoration: none;
  }
  .blog-post-tag:hover {
    background-color: #e5e7eb;
  }
  .blog-post-content {
    line-height: 1.75;

    & :global(h1),
    & :global(h2),
    & :global(h3) {
      margin-top: 2rem;
      margin-bottom: 1rem;
      font-weight: bold;
    }
    & :global(h1) {
      font-size: 1.5rem;
    }
    & :global(h2) {
      font-size: 1.25rem;
    }
    & :global(h3) {
      font-size: 1.125rem;
    }
    & :global(p) {
      margin-bottom: 1rem;
    }
    & :global(hr) {
      border-color: var(--color-stone-100);
    }
    & :global(ul),
    & :global(ol) {
      margin-bottom: 1rem;
      padding-left: 1.5rem;
    }
    & :global(blockquote) {
      border-left: 4px solid #e5e7eb;
      padding-left: 1rem;
      margin: 1rem 0;
      font-style: italic;
    }
    & :global(strong) {
      font-weight: 600;
    }
    & :global(a) {
      color: #2563eb;
      text-decoration: underline;
    }
    & :global(a:hover) {
      color: #1d4ed8;
    }
    & :global(li) {
      margin-bottom: 0.5rem;
    }
  }
</style>

<Layout title={title} description={description}>
  <article>
    <header class="blog-post-header">
      <h1 class="blog-post-title">{title}</h1>
      <div class="blog-post-meta">
        <time datetime={date.toISOString()}>
          {date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span>â€¢</span>
        <span class="type">{type}</span>
      </div>
      {tags.length > 0 && (
        <div class="blog-post-tags">
          {tags.map(tag => (
            <a
              href={`/tags/${tag}`}
              class="blog-post-tag"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}
    </header>
    <div class="blog-post-content">
      <slot />
    </div>
  </article>
</Layout>
