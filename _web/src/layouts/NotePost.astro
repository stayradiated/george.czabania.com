---
import Layout from './Layout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, date, tags, description } = post.data;
---

<style>
  .note-container {
    max-width: 36rem;
    margin: 0 auto;
    padding: 1rem;
  }
  .note-post {
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    padding: 1.5rem;
    background-color: #ffffff;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  .note-post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }
  .note-post-tag {
    padding: 0.125rem 0.375rem;
    background-color: #f3f4f6;
    color: #4b5563;
    font-size: 0.6875rem;
    border-radius: 0.25rem;
    text-decoration: none;
    font-weight: 500;
  }
  .note-post-tag:hover {
    background-color: #e5e7eb;
  }
  .note-post-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1rem;
    line-height: 1.4;
  }
  .note-post-content {
    font-size: 0.95rem;
    line-height: 1.5;
    color: #1f2937;
    margin-bottom: 1.5rem;
  }
  .note-post-content p {
    margin-bottom: 1rem;
  }
  .note-post-content p:last-child {
    margin-bottom: 0;
  }
  .note-post-content a {
    color: #2563eb;
    text-decoration: none;
  }
  .note-post-content a:hover {
    text-decoration: underline;
  }
  .note-post-content code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  .note-post-content blockquote {
    border-left: 3px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
    color: #6b7280;
  }
  .note-post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid #f3f4f6;
    font-size: 0.75rem;
    color: #6b7280;
  }
  .note-post-date {
    color: #6b7280;
  }
  .note-post-actions {
    display: flex;
    gap: 0.75rem;
  }
  .note-post-action {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.75rem;
  }
  .note-post-action:hover {
    color: #2563eb;
  }
</style>

<Layout title={title || 'Note'} description={description}>
  <div class="note-container">
    <article class="note-post">
      {tags.length > 0 && (
        <div class="note-post-tags">
          {tags.map(tag => (
            <a 
              href={`/tags/${tag}`} 
              class="note-post-tag"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}
      
      {title && (
        <h1 class="note-post-title">{title}</h1>
      )}
      
      <div class="note-post-content">
        <slot />
      </div>
      
      <footer class="note-post-footer">
        <time datetime={date.toISOString()} class="note-post-date">
          {date.toLocaleDateString('en-US', { 
            hour: 'numeric',
            minute: '2-digit',
            month: 'short', 
            day: 'numeric',
            year: 'numeric'
          })}
        </time>
        <div class="note-post-actions">
          <a href="/notes" class="note-post-action">‚Üê All Notes</a>
        </div>
      </footer>
    </article>
  </div>
</Layout>