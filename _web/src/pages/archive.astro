---
import Layout from '../layouts/Layout.astro';
import { getAllPublishedPosts, groupPostsByYearMonth } from '../lib/published';

const posts = await getAllPublishedPosts();
const postsByMonth = groupPostsByYearMonth(posts);

// Sort months in descending order
const sortedMonths = Array.from(postsByMonth.keys()).sort((a, b) => b.localeCompare(a));
---

<style>
  .page-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 2rem;
  }
  .no-posts {
    color: #6b7280;
  }
  .archive-sections {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  .archive-month-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #1f2937;
  }
  .archive-posts {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
  }
  .archive-post {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
  }
  .archive-post a {
    color: #2563eb;
    text-decoration: none;
  }
  .archive-post a:hover {
    text-decoration: underline;
  }
  .archive-post-date {
    font-size: 0.875rem;
    color: #6b7280;
    margin-left: 1rem;
  }
</style>

<Layout title="Archive" description="Posts organized by date">
  <h1 class="page-title">Archive</h1>
  
  {sortedMonths.length === 0 ? (
    <p class="no-posts">No posts published yet.</p>
  ) : (
    <div class="archive-sections">
      {sortedMonths.map(month => {
        const monthPosts = postsByMonth.get(month)!;
        const [year, monthNum] = month.split('-');
        const monthName = new Date(parseInt(year), parseInt(monthNum) - 1).toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long' 
        });
        
        return (
          <section>
            <h2 class="archive-month-title">{monthName}</h2>
            <ul class="archive-posts">
              {monthPosts.map(post => (
                <li class="archive-post">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                  <span class="archive-post-date">
                    {post.data.date.getDate()}
                  </span>
                </li>
              ))}
            </ul>
          </section>
        );
      })}
    </div>
  )}
</Layout>