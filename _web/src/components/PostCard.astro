---
import type { CollectionEntry } from "astro:content";
import type { Post } from "../lib/published";

interface Props {
  post: Post;
}

const { post } = Astro.props;
const { title, date, tags, description, type } = post.data;
---

<style>
  .post-card {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e7eb;
  }
  .post-card:last-child {
    border-bottom: none;
  }
  .post-header {
    margin-bottom: 1rem;
  }
  .post-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  .post-title a {
    text-decoration: none;
    color: inherit;
  }
  .post-title a:hover {
    text-decoration: underline;
  }
  .post-meta {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.5rem;
  }
  .post-meta span {
    margin: 0 0.5rem;
  }
  .post-meta .type {
    text-transform: capitalize;
  }
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }
  .post-tag {
    padding: 0.25rem 0.5rem;
    background-color: #f3f4f6;
    color: #374151;
    font-size: 0.75rem;
    border-radius: 0.25rem;
    text-decoration: none;
  }
  .post-tag:hover {
    background-color: #e5e7eb;
  }
  .post-description {
    color: #374151;
    margin-bottom: 1rem;
  }
  .post-link {
    color: #2563eb;
    text-decoration: none;
    font-size: 0.875rem;
  }
  .post-link:hover {
    text-decoration: underline;
  }
</style>

<article class="post-card">
  <header class="post-header">
    <h2 class="post-title">
      <a href={`/post/${post.id}`}>
        {title}
      </a>
    </h2>
    <div class="post-meta">
      <time datetime={date.toISOString()}>
        {date.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'short', 
          day: 'numeric' 
        })}
      </time>
      <span>•</span>
      <span class="type">{type}</span>
    </div>
    {tags.length > 0 && (
      <div class="post-tags">
        {tags.map(tag => (
          <a 
            href={`/tags/${tag}`} 
            class="post-tag"
          >
            #{tag}
          </a>
        ))}
      </div>
    )}
  </header>
  {description && (
    <p class="post-description">{description}</p>
  )}
  <a href={`/post/${post.id}`} class="post-link">
    Read more →
  </a>
</article>
