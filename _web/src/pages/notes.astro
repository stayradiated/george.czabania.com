---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { getPublishedNotes } from '../lib/published';

const notes = await getPublishedNotes();
---

<style>
  .page-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 2rem;
  }
  .no-posts {
    color: #6b7280;
  }
</style>

<Layout title="Notes" description="Quick thoughts and micro-posts">
  <h1 class="page-title">Notes</h1>
  
  {notes.length === 0 ? (
    <p class="no-posts">No notes published yet.</p>
  ) : (
    <div>
      {notes.map(note => (
        <PostCard post={note} />
      ))}
    </div>
  )}
</Layout>