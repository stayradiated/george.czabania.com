---
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, date, tags, description, type } = post.data;
---

<style>
  .blog-post-header {
    margin-bottom: 2rem;
  }
  .blog-post-title {
    font-size: 1.875rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  .blog-post-meta {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }
  .blog-post-meta span {
    margin: 0 0.5rem;
  }
  .blog-post-meta .type {
    text-transform: capitalize;
  }
  .blog-post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .blog-post-tag {
    padding: 0.25rem 0.5rem;
    background-color: #f3f4f6;
    color: #374151;
    font-size: 0.75rem;
    border-radius: 0.25rem;
    text-decoration: none;
  }
  .blog-post-tag:hover {
    background-color: #e5e7eb;
  }
  .blog-post-content {
    line-height: 1.75;
  }
  .blog-post-content :global(h1),
  .blog-post-content :global(h2),
  .blog-post-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: bold;
  }
  .blog-post-content :global(h1) {
    font-size: 1.5rem;
  }
  .blog-post-content :global(h2) {
    font-size: 1.25rem;
  }
  .blog-post-content :global(h3) {
    font-size: 1.125rem;
  }
  .blog-post-content :global(p) {
    margin-bottom: 1rem;
  }
  .blog-post-content :global(ul),
  .blog-post-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  .blog-post-content :global(code) {
    background-color: #f9fafb;
    padding: 0.125em 0.375em;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-family: 'Consolas', 'Monaco', 'Andale Mono', 'Ubuntu Mono', monospace;
    border: 1px solid #e5e7eb;
  }
  .blog-post-content :global(pre) {
    background-color: #fafbfc;
    padding: 1.25rem 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem -1rem;
    line-height: 1.6;
    font-size: 0.875rem;
    border: 1px solid #e5e7eb;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }
  .blog-post-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    font-size: inherit;
    white-space: pre;
    word-wrap: normal;
    overflow-wrap: normal;
    border: none;
  }
  .blog-post-content :global(blockquote) {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
  }
  .blog-post-content :global(strong) {
    font-weight: 600;
  }
  .blog-post-content :global(a) {
    color: #2563eb;
    text-decoration: underline;
  }
  .blog-post-content :global(a:hover) {
    color: #1d4ed8;
  }
  .blog-post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  /* Responsive adjustments for code blocks */
  @media (min-width: 768px) {
    .blog-post-content :global(pre) {
      margin: 1.5rem 0;
      padding: 1.5rem 2rem;
    }
  }

  /* Code highlighting styles */
  .blog-post-content :global(.line.highlighted) {
    background-color: #fff3cd;
    display: inline-block;
    margin: 0 -1.5rem;
    padding: 0 1.5rem;
    width: 100%;
    box-shadow: inset 3px 0 0 #ffc107;
  }
</style>

<Layout title={title} description={description}>
  <article>
    <header class="blog-post-header">
      <h1 class="blog-post-title">{title}</h1>
      <div class="blog-post-meta">
        <time datetime={date.toISOString()}>
          {date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span>â€¢</span>
        <span class="type">{type}</span>
      </div>
      {tags.length > 0 && (
        <div class="blog-post-tags">
          {tags.map(tag => (
            <a
              href={`/tags/${tag}`}
              class="blog-post-tag"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}
    </header>
    <div class="blog-post-content">
      <slot />
    </div>
  </article>
</Layout>
