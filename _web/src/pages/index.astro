---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { getAllPublishedPosts } from '../lib/published';

const posts = await getAllPublishedPosts();
---

<Layout title="Blog" description="Personal blog with notes and posts">
  <h1 class="text-2xl font-bold mb-8">Latest Posts</h1>
  
  {posts.length === 0 ? (
    <p class="text-gray-600">No posts published yet.</p>
  ) : (
    <div>
      {posts.map(post => (
        <PostCard post={post} />
      ))}
    </div>
  )}
</Layout>
