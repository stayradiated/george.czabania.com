---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import { getAllTags, getPostsByTag } from '../../lib/published';

export async function getStaticPaths() {
  const tags = await getAllTags();
  
  return tags.map(tag => ({
    params: { tag },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const posts = await getPostsByTag(tag);
---

<Layout title={`Posts tagged "${tag}"`} description={`All posts tagged with ${tag}`}>
  <div class="mb-8">
    <h1 class="text-2xl font-bold mb-2">Posts tagged "{tag}"</h1>
    <p class="text-gray-600">{posts.length} post{posts.length === 1 ? '' : 's'}</p>
  </div>
  
  {posts.length === 0 ? (
    <p class="text-gray-600">No posts found with this tag.</p>
  ) : (
    <div>
      {posts.map(post => (
        <PostCard post={post} />
      ))}
    </div>
  )}
</Layout>