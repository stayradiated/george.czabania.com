---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { getPublishedPosts } from '../lib/published';

const posts = await getPublishedPosts();
---

<style>
  .page-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 2rem;
  }
  .no-posts {
    color: #6b7280;
  }
</style>

<Layout title="Posts" description="Longer form articles and essays">
  <h1 class="page-title">Posts</h1>
  
  {posts.length === 0 ? (
    <p class="no-posts">No posts published yet.</p>
  ) : (
    <div>
      {posts.map(post => (
        <PostCard post={post} />
      ))}
    </div>
  )}
</Layout>